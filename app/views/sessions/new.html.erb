<div class="signin_paper_wrapper">
  <div class="signin_paper"> 
    <div class="signin_paper_header">   
      <h2>Log In</h2>
    </div>
    <div id="content">
      <div id="form_container">
        <%= form_tag sessions_path do %>
          <p>
            <%= label_tag :email %><br />
            <%= text_field_tag :email, params[:email] %>
          </p>
          <p>
            <%= label_tag :password %><br />
            <%= password_field_tag :password %>
          </p>
          <p class="button"><%= submit_tag 'Log in' %></p>
        <% end %>
        <p class="blurb"><%= link_to "Change/Reset Password", users_forgot_password_path %></p>
        
      </div>
      <p><%= link_to "Don't have an account? Sign up now!", new_user_path %></p>
    </div>
  </div>
</div>